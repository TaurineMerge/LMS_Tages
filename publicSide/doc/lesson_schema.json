{
    "$schema": "lesson_schema.json",
    "type": "object",
    "$defs": {
        "textContent": {
            "type": "object",
            "properties": {
                "content_type": {
                    "type": "string",
                    "const": "text"
                },
                "data": {
                    "type": "string"
                }
            },
            "required": [
                "content_type",
                "data"
            ]
        },
        "imageContent": {
            "type": "object",
            "properties": {
                "content_type": {
                    "type": "string",
                    "const": "image"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "alt": {
                    "type": "string"
                }
            },
            "required": [
                "content_type",
                "url",
                "alt"
            ]
        }
    },
    "properties": {
        "uuid": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "content": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/$defs/textContent"
                    },
                    {
                        "$ref": "#/$defs/imageContent"
                    }
                ]
            }
        }
    },
    "required": [
        "id",
        "title",
        "content"
    ]
}