{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "lesson-update.json",
    "type": "object",
    "title": "LessonUpdate",
    "description": "JSON Schema для обновления урока",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "Новое название урока"
        },
        "content": {
            "type": "array",
            "description": "Новый контент урока",
            "items": {
                "type": "object",
                "properties": {
                    "content_type": {
                        "type": "string",
                        "description": "Тип контента"
                    },
                    "data": {
                        "description": "Данные контента"
                    }
                },
                "required": ["content_type", "data"]
            }
        }
    },
    "additionalProperties": false,
    "minProperties": 1
}
