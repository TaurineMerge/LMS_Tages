{
    "$schema": "lesson_schema.json",
    "type": "object",
    "$defs": {
        "textContent": {
            "type": "object",
            "properties": {
                "content_type": {
                    "type": "string",
                    "const": "text",
                    "description": "Тип контента - текстовый"
                },
                "data": {
                    "type": "string",
                    "maxLength": 10000,
                    "example": "В этом уроке мы изучим основы Python...",
                    "description": "Текстовое содержание урока"
                }
            },
            "required": [
                "content_type",
                "data"
            ]
        },
        "imageContent": {
            "type": "object",
            "properties": {
                "content_type": {
                    "type": "string",
                    "const": "image",
                    "description": "Тип контента - изображение"
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "example": "https://example.com/images/python-logo.png",
                    "description": "URL изображения"
                },
                "alt": {
                    "type": "string",
                    "maxLength": 255,
                    "example": "Логотип языка программирования Python",
                    "description": "Альтернативный текст для изображения"
                }
            },
            "required": [
                "content_type",
                "url",
                "alt"
            ]
        }
    },
    "properties": {
        "uuid": {
            "type": "string",
            "format": "uuid",
            "example": "f1e2d3c4-b5a6-7890-cdef-ab9876543210",
            "description": "Уникальный идентификатор урока в формате UUID"
        },
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "example": "Введение в Python: Урок 1",
            "description": "Название урока"
        },
        "content": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/$defs/textContent"
                    },
                    {
                        "$ref": "#/$defs/imageContent"
                    }
                ]
            },
            "description": "Содержание урока (текст и/или изображения)"
        }
    },
    "required": [
        "uuid",
        "title",
        "content"
    ]
}