{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "course-create.json",
    "type": "object",
    "title": "CourseCreate",
    "description": "JSON Schema для создания нового курса",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "Название курса"
        },
        "description": {
            "type": "string",
            "description": "Описание курса"
        },
        "level": {
            "type": "string",
            "enum": ["easy", "medium", "hard"],
            "description": "Уровень сложности курса"
        },
        "category_id": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
            "description": "UUID категории курса"
        },
        "visibility": {
            "type": "string",
            "enum": ["draft", "public", "private"],
            "description": "Видимость курса"
        }
    },
    "required": ["title", "category_id"],
    "additionalProperties": false
}
