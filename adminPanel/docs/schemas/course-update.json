{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "course-update.json",
    "type": "object",
    "title": "CourseUpdate",
    "description": "JSON Schema для обновления курса",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "Новое название курса"
        },
        "description": {
            "type": "string",
            "description": "Новое описание курса"
        },
        "level": {
            "type": "string",
            "enum": ["easy", "medium", "hard"],
            "description": "Новый уровень сложности курса"
        },
        "category_id": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
            "description": "UUID новой категории курса"
        },
        "visibility": {
            "type": "string",
            "enum": ["draft", "public", "private"],
            "description": "Новая видимость курса"
        }
    },
    "additionalProperties": false,
    "minProperties": 1
}
