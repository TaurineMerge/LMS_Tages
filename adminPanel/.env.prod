# ============================================
# Admin Panel - Production Environment
# ============================================
# Используется в docker-compose.yml через env_file
# ============================================

# Database
DATABASE_POOL_MIN_SIZE=5
DATABASE_POOL_MAX_SIZE=20

# Server
API_ADDRESS=:4000
APP_NAME=Admin Panel API
ROOT_PATH=/admin

# Keycloak
KEYCLOAK_ISSUER_URL=http://keycloak:8080/auth/realms/teacher
KEYCLOAK_CLIENT_ID=teacher-client
KEYCLOAK_CLIENT_SECRET=TEACHER_SECRET
KEYCLOAK_APP_NAME=LMS Admin Application

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_SERVICE_NAME=admin-panel

# CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization
CORS_ALLOW_CREDENTIALS=false
CORS_EXPOSE_HEADERS=Content-Length

# Debug
DEBUG=false

# ============================================
# MinIO (S3) Configuration
# ============================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=images
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9000
