<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизация...</title>
    <link href="/account/static/css/main.css" rel="stylesheet"/>
</head>
<body>
    <div class="callback-card" id="callbackCard">
        <div id="loadingState">
            <div class="spinner-grow text-primary mb-4" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <h4>Авторизация...</h4>
            <p class="text-muted">Подождите, идёт обработка</p>
        </div>
        
        <div id="errorState" style="display: none;">
            <p class="bi bi-x-circle error-icon"></p>
            <h4 class="mt-3">Ошибка авторизации</h4>
            <p class="text-muted" id="errorMessage">Что-то пошло не так</p>
            <a href="/account/login" class="btn btn-primary mt-3">
                <p class="bi bi-arrow-left me-2"></p>Вернуться к входу
            </a>
        </div>
        
        <div id="successState" style="display: none;">
            <p class="bi bi-check-circle success-icon"></p>
            <h4 class="mt-3">Успешно!</h4>
            <p class="text-muted">Перенаправление в личный кабинет...</p>
        </div>
    </div>

    <script>
        async function handleCallback() {
            const urlParams = new URLSearchParams(window.location.search);
            const code = urlParams.get('code');
            const error = urlParams.get('error');
            const errorDescription = urlParams.get('error_description');
            
            const loadingState = document.getElementById('loadingState');
            const errorState = document.getElementById('errorState');
            const successState = document.getElementById('successState');
            const errorMessage = document.getElementById('errorMessage');
            
            // Check for error from Keycloak
            if (error) {
                loadingState.style.display = 'none';
                errorState.style.display = 'block';
                errorMessage.textContent = errorDescription || error;
                return;
            }
            
            // Check if we have a code
            if (!code) {
                loadingState.style.display = 'none';
                errorState.style.display = 'block';
                errorMessage.textContent = 'Код авторизации не получен';
                return;
            }
            
            try {
                // Exchange code for token
                const response = await fetch(`/account/api/v1/auth/callback?code=${encodeURIComponent(code)}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Response error:', response.status, errorText);
                    throw new Error(`HTTP ${response.status}: ${errorText}`);
                }
                
                const data = await response.json();
                
                if (response.ok && data.data) {
                    // Tokens are already set as HTTP-only cookies by the server
                    // No need to store in localStorage
                    
                    // Show success
                    loadingState.style.display = 'none';
                    successState.style.display = 'block';
                    
                    // Redirect to dashboard
                    setTimeout(() => {
                        window.location.href = '/account/dashboard';
                    }, 1500);
                } else {
                    throw new Error(data.detail || data.error || 'Ошибка обмена кода');
                }
            } catch (err) {
                console.error('Callback error:', err);
                loadingState.style.display = 'none';
                errorState.style.display = 'block';
                errorMessage.textContent = err.message || 'Ошибка авторизации';
            }
        }
        
        // Run on page load
        document.addEventListener('DOMContentLoaded', handleCallback);
    </script>
</body>
</html>