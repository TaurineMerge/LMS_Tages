            </li>
            <li class="nav-item">
                <a class="nav-link" href="/account/profile">
                   <svg viewBox="0 0 24 24" class="nav-link--icon">
                        <use href="#profile"></use>
                    </svg>
                    <p>Профиль</p>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/account/certificates">
                    <svg viewBox="0 0 24 24" class="nav-link--icon">
                        <use href="#certificate"></use>
                    </svg>
                    <p>Сертификаты</p>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/account/visits">
                   <svg viewBox="0 0 24 24" class="nav-link--icon">
                        <use href="#visits"></use>
                    </svg>
                    <p>Посещения</p>
                </a>
            </li>
        </ul>
        
        </div>
        
        <div class="sidebar__logout">
            <a class="nav-link" href="/account/visits">
                   <svg viewBox="0 0 24 24" class="nav-link--icon">
                        <use href="#logout"></use>
                    </svg>
                    <p>Выйти</p>
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navbar -->
        <nav class="navbar-top d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">{% block page_title %}Личный кабинет{% endblock %}</h4>
                <small class="text-muted">{% block page_subtitle %}Добро пожаловать!{% endblock %}</small>
            </div>
            <div class="d-flex align-items-center">
                <div class="dropdown me-3">
                    <button class="btn btn-light position-relative" type="button">
                        <p class="bi bi-bell"></p>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3
                        </span>
                    </button>
                </div>
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                        <p class="bi bi-person-circle"></p>
                        <span id="nav-username">Гость</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/account/profile"><p class="bi bi-person me-2"></p>Профиль</a></li>
                        <li><a class="dropdown-item" href="/account/settings"><p class="bi bi-gear me-2"></p>Настройки</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#" id="logout-btn"><p class="bi bi-box-arrow-right me-2"></p>Выйти</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        {% block content %}{% endblock %}
    </div>

    <!-- Toast Container for Notifications -->
    <div id="toast-container"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    
    <script>
        // Global API Helper(хз)
        const API = {
            baseUrl: '/account/api/v1',

            async request(endpoint, options = {}) {
                const token = this.getToken();
                const headers = {
                    'Content-Type': 'application/json',
                    ...this.getTraceHeaders(),
                    ...options.headers
                };
                const response = await fetch(`${this.baseUrl}${endpoint}`, {
                    ...options,
                    headers
                });
                
            async get(endpoint) {
                const response = await this.request(endpoint);
                return response.json();
            },
            
            async post(endpoint, data) {
                const response = await this.request(endpoint, {
                    method: 'POST',
                    body: JSON.stringify(data)
                });
                return response.json();
            },
        }
        }
       // Check auth and update UI
        async function checkAuth() {
    try {
        const response = await fetch('/account/api/v1/auth/me', {
            credentials: 'include' // Важно: отправлять куки вместе с запросом
        });

        if (response.ok) {
            const data = await response.json();
            return data.data; // Информация о пользователе
        } else {
            // Пользователь не авторизован
            window.location.href = '/account/login';
            return null;
        }
    } catch (error) {
        console.error('Ошибка при проверке авторизации:', error);
        window.location.href = '/account/login';
        return null;
    }
}
        // Logout handler
        document.getElementById('logout-btn')?.addEventListener('click', async (e) => {
            e.preventDefault();
            try {
        // Вызываем серверный logout (удаление куки и сессии)
        const response = await fetch('/account/api/v1/auth/logout', {
            method: 'POST',
            credentials: 'include'  // Важно: отправлять куки с запросом
        });

        if (response.ok) {
            // Перенаправляем на страницу входа
            window.location.href = '/account/login';
        } else {
            console.error('Logout failed');
        }
    } catch (error) {
        console.error('Error during logout:', error);
        // Перенаправляем, даже если были ошибки
        window.location.href = '/account/login';
    }
        });

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            checkAuth();
        });
    </script>
    
    {% block extra_js %}{% endblock %}
</body>
</html>
