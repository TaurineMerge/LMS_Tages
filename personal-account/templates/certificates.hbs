{% extends "base.hbs" %}

{% block title %}Сертификаты - Личный кабинет{% endblock %}
{% block page_title %}Сертификаты{% endblock %}
{% block page_subtitle %}Ваши достижения и награды{% endblock %}

{% block content %}
<div class="card p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="mb-0"><p class="bi bi-award me-2"></p>Мои сертификаты</h5>
        <div class="d-flex gap-2">
            <form action="{{ prefix }}/certificates/generate" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-primary">
                    <p class="bi bi-plus-circle me-2"></p>Сгенерировать сертификаты
                </button>
            </form>
        </div>
    </div>
    
    <div id="certificates-container">
        {% if certificates %}
        <div class="row">
            {% for certificate in certificates %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 certificate-card" data-id="{{ certificate.id }}">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <p class="bi bi-award-fill text-warning" style="font-size: 64px;"></p>
                        </div>
                        <h5 class="card-title">Сертификат</h5>
                        <p class="text-muted mb-2">Курс #{{ certificate.course_id }}</p>
                        <small class="text-muted d-block mb-3">
                            <p class="bi bi-calendar me-1"></p>{{ certificate.created_at.strftime('%d.%m.%Y') if certificate.created_at else 'Неизвестно' }}
                        </small>
                        <button class="btn btn-sm btn-outline-primary view-certificate" data-id="{{ certificate.id }}">
                            <p class="bi bi-eye me-1"></p>Просмотреть
                        </button>
                        {% if certificate.download_url %}
                        <a href="{{ certificate.download_url }}" download="certificate-{{ certificate.certificate_number or certificate.id }}.pdf" class="btn btn-sm btn-outline-success ms-2">
                            <p class="bi bi-download me-1"></p>Скачать
                        </a>
                        {% else %}
                        <button class="btn btn-sm btn-outline-secondary ms-2" disabled>
                            <p class="bi bi-download me-1"></p>PDF недоступен
                        </button>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-5">
            <p class="bi bi-award text-muted" style="font-size: 64px;"></p>
            <h5 class="mt-3 text-muted">У вас пока нет сертификатов</h5>
            <p class="text-muted">Завершите курсы, чтобы получить сертификаты</p>
        </div>
        {% endif %}
    </div>
</div>

<!-- Certificate Modal -->
<div class="modal fade" id="certificateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Сертификат</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center p-5" id="certificate-preview">
                <!-- Certificate preview will be rendered here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="download-certificate" disabled>
                    <p class="bi bi-download me-2"></p>Скачать PDF
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Handlebars Templates -->
{% raw %}
<script id="certificates-grid-template" type="text/x-handlebars-template">
    {{#if certificates.length}}
    <div class="row">
        {{#each certificates}}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 certificate-card" data-id="{{id}}">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <p class="bi bi-award-fill text-warning" style="font-size: 64px;"></p>
                    </div>
                    <h5 class="card-title">Сертификат</h5>
                    <p class="text-muted mb-2">Курс #{{course_id}}</p>
                    <small class="text-muted d-block mb-3">
                        <p class="bi bi-calendar me-1"></p>{{formatDate created_at}}
                    </small>
                    <button class="btn btn-sm btn-outline-primary view-certificate" data-id="{{id}}">
                        <p class="bi bi-eye me-1"></p>Просмотреть
                    </button>
                    {{#if download_url}}
                    <a href="{{download_url}}" download="certificate-{{certificate_number}}.pdf" class="btn btn-sm btn-outline-success ms-2">
                        <p class="bi bi-download me-1"></p>Скачать
                    </a>
                    {{else}}
                    <button class="btn btn-sm btn-outline-secondary ms-2" disabled>
                        <p class="bi bi-download me-1"></p>PDF недоступен
                    </button>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="text-center py-5">
        <p class="bi bi-award text-muted" style="font-size: 64px;"></p>
        <h5 class="mt-3 text-muted">У вас пока нет сертификатов</h5>
        <p class="text-muted">Завершите курсы, чтобы получить сертификаты</p>
        <a href="/courses" class="btn btn-primary">
            <p class="bi bi-book me-2"></p>Перейти к курсам
        </a>
    </div>
    {{/if}}
</script>

<script id="certificate-preview-template" type="text/x-handlebars-template">
    <div class="certificate-preview p-5 border border-3 border-warning" style="background: linear-gradient(135deg, #fff9e6 0%, #fff 100%);">
        <div class="mb-4">
            <p class="bi bi-mortarboard-fill text-primary" style="font-size: 48px;"></p>
        </div>
        <h2 class="text-uppercase mb-3">Сертификат</h2>
        <p class="lead mb-2">подтверждает, что</p>
        <h3 class="text-primary mb-3">{{student_name}}</h3>
        <p class="lead mb-4">успешно завершил(а) курс</p>
        <h4 class="mb-4">«Курс #{{course_id}}»</h4>
        <hr class="w-50 mx-auto my-4">
        <p class="text-muted">
            <p class="bi bi-calendar me-1"></p>Дата выдачи: {{formatDate created_at}}
        </p>
        <p class="text-muted">
            <p class="bi bi-fingerprint me-1"></p>ID: {{id}}
        </p>
    </div>
</script>
{% endraw %}
{% endblock %}

{% block extra_js %}
<script>
    // Handlebars helpers
    Handlebars.registerHelper('formatDate', function(dateString) {
        if (!dateString) return 'Неизвестно';
        const date = new Date(dateString);
        return date.toLocaleDateString('ru-RU', {
            day: '2-digit',
            month: 'long',
            year: 'numeric'
        });
    });

    const certificatesGridTemplate = Handlebars.compile(document.getElementById('certificates-grid-template').innerHTML);
    const certificatePreviewTemplate = Handlebars.compile(document.getElementById('certificate-preview-template').innerHTML);
    
    let allCertificates = [];
    let currentUser = null;

    async function loadCertificates() {
        const token = API.getToken();
        
        if (!token) {
            document.getElementById('certificates-container').innerHTML = certificatesGridTemplate({ certificates: [] });
            return;
        }
        
        try {
            // Get user info
            const userResponse = await API.get('/auth/me');
            currentUser = userResponse.data;
            
            // Get certificates
            const response = await API.get('/certificates');
            allCertificates = response.data || [];
            
            renderCertificates(allCertificates);
            
        } catch (error) {
            console.error('Failed to load certificates:', error);
            showToast('Ошибка загрузки сертификатов', 'danger');
            document.getElementById('certificates-container').innerHTML = certificatesGridTemplate({ certificates: [] });
        }
    }

    function renderCertificates(certificates) {
        document.getElementById('certificates-container').innerHTML = certificatesGridTemplate({ certificates });
        
        // Add click handlers
        document.querySelectorAll('.view-certificate').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const id = e.currentTarget.dataset.id;
                showCertificate(id);
            });
        });
    }

    function showCertificate(id) {
        const certificate = allCertificates.find(c => c.id === id);
        if (!certificate) return;
        
        // If we have a download URL, show PDF preview
        if (certificate.download_url) {
            const html = `
                <div class="text-center">
                    <iframe src="${certificate.download_url}" 
                            width="100%" 
                            height="500px" 
                            style="border: 1px solid #ddd; border-radius: 8px;">
                        <p>Ваш браузер не поддерживает просмотр PDF. 
                           <a href="${certificate.download_url}" target="_blank">Скачать PDF</a>
                        </p>
                    </iframe>
                </div>
            `;
            document.getElementById('certificate-preview').innerHTML = html;
            
            // Update download button
            const downloadBtn = document.getElementById('download-certificate');
            downloadBtn.onclick = () => {
                const link = document.createElement('a');
                link.href = certificate.download_url;
                link.download = `certificate-${certificate.certificate_number || certificate.id}.pdf`;
                link.click();
            };
        } else {
            // Fallback to HTML preview if no PDF URL
            const html = certificatePreviewTemplate({
                ...certificate,
                student_name: currentUser?.name || currentUser?.preferred_username || 'Студент'
            });
            document.getElementById('certificate-preview').innerHTML = html;
            
            // Disable download button
            document.getElementById('download-certificate').disabled = true;
        }
        
        new bootstrap.Modal(document.getElementById('certificateModal')).show();
    }

    // Search and filter
    document.getElementById('search-certificates').addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase();
        const filtered = allCertificates.filter(c => 
            c.course_id?.toString().includes(query) ||
            c.id?.toLowerCase().includes(query)
        );
        renderCertificates(filtered);
    });

    document.addEventListener('DOMContentLoaded', loadCertificates);
</script>
{% endblock %}