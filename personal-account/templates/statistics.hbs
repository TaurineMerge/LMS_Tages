{% extends "base.hbs" %}

{% block title %}Статистика | LMS Tages{% endblock %}

{% block content %}
<h1 class="text-2xl font-bold mb-6">Моя статистика</h1>

{% if not stats %}
<div id="stats-error" class="text-red-600 text-center py-8">
    <p>Ошибка загрузки статистики или данных пока нет</p>
</div>
{% else %}
<div id="stats-content">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm">Всего попыток</h3>
            <p id="total-attempts" class="text-3xl font-bold text-blue-600">{{ stats.total_attempts or 0 }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm">Пройдено</h3>
            <p id="passed-attempts" class="text-3xl font-bold text-green-600">{{ stats.passed_attempts or 0 }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm">Не пройдено</h3>
            <p id="failed-attempts" class="text-3xl font-bold text-red-600">{{ stats.failed_attempts or 0 }}</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm">Средний балл</h3>
            <p id="avg-score" class="text-3xl font-bold text-purple-600">{{ "%.1f"|format(stats.avg_score or 0) }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm">Пройдено тестов</h3>
            <p id="total-tests" class="text-3xl font-bold text-orange-600">{{ stats.total_tests_taken or 0 }}</p>
        </div>
    </div>

    <div class="mt-6 text-center">
        <form action="{{ prefix }}/statistics/refresh" method="POST" style="display: inline;">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                Обновить статистику
            </button>
        </form>
    </div>

    {% if data.certificates %}
    <div class="mt-8">
        <h2 class="text-xl font-bold mb-4">Мои сертификаты</h2>
        {% for course_id, course_certificates in data.certificates.items() %}
        <div class="bg-white rounded-lg shadow p-6 mb-4">
            <h3 class="text-lg font-semibold mb-3">Сертификаты за курс {{ course_certificates[0].course_name or course_id }}</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for cert in course_certificates %}
                <div class="certificate border border-gray-200 rounded p-4 hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-center mb-2">
                        <span class="font-medium">Сертификат #{{ cert.certificate_number }}</span>
                        <span class="text-sm text-gray-500">{{ cert.created_at.strftime('%d.%m.%Y') }}</span>
                    </div>
                    {% if cert.download_url %}
                    <a href="{{ cert.download_url }}" target="_blank" 
                       class="inline-flex items-center px-3 py-1 bg-green-500 hover:bg-green-600 text-white text-sm rounded transition-colors">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Скачать PDF
                    </a>
                    {% else %}
                    <span class="text-sm text-gray-400">Сертификат недоступен</span>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}

    {% if data.attempts %}
    <div class="mt-8">
        <h2 class="text-xl font-bold mb-4">Мои попытки</h2>
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Тест</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Курс</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дата</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Балл</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for attempt in data.attempts %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {{ attempt.test_title }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ attempt.course_name }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ attempt.date_of_attempt.strftime('%d.%m.%Y') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {% if attempt.point is not none %}
                                    {{ attempt.point }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if attempt.passed %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Пройден
                                </span>
                                {% elif attempt.completed %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    Не пройден
                                </span>
                                {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    В процессе
                                </span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endif %}
{% endblock %}

{% block extra_js %}
{# JavaScript удален, так как статистика теперь рендерится на сервере #}
{% endblock %}
