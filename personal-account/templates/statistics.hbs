<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Статистика | LMS Tages</title>
    <link href="/static/css/style.css" rel="stylesheet">
</head>
<body>
    {{> navbar active_page="statistics"}}
    
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-6">Моя статистика</h1>
        
        <div id="stats-loading" class="text-center py-8">
            <p>Загрузка статистики...</p>
        </div>
        
        <div id="stats-error" class="hidden text-red-600 text-center py-8">
            <p>Ошибка загрузки статистики</p>
        </div>
        
        <div id="stats-content" class="hidden">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-gray-500 text-sm">Всего попыток</h3>
                    <p id="total-attempts" class="text-3xl font-bold text-blue-600">0</p>
                </div>
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-gray-500 text-sm">Пройдено</h3>
                    <p id="passed-attempts" class="text-3xl font-bold text-green-600">0</p>
                </div>
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-gray-500 text-sm">Не пройдено</h3>
                    <p id="failed-attempts" class="text-3xl font-bold text-red-600">0</p>
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-gray-500 text-sm">Средний балл</h3>
                    <p id="avg-score" class="text-3xl font-bold text-purple-600">0</p>
                </div>
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-gray-500 text-sm">Пройдено тестов</h3>
                    <p id="total-tests" class="text-3xl font-bold text-orange-600">0</p>
                </div>
            </div>
            
            <div class="mt-6 text-center">
                <button id="refresh-btn" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                    Обновить статистику
                </button>
            </div>
        </div>
    </main>

    <script>
        const studentId = localStorage.getItem('student_id');
        
        async function loadStats() {
            if (!studentId) {
                document.getElementById('stats-loading').classList.add('hidden');
                document.getElementById('stats-error').classList.remove('hidden');
                document.getElementById('stats-error').querySelector('p').textContent = 'Войдите в систему';
                return;
            }
            
            try {
                const response = await fetch(`/api/v1/stats/${studentId}`);
                const result = await response.json();
                
                if (result.status === 'ok') {
                    const data = result.data;
                    document.getElementById('total-attempts').textContent = data.total_attempts || 0;
                    document.getElementById('passed-attempts').textContent = data.passed_attempts || 0;
                    document.getElementById('failed-attempts').textContent = data.failed_attempts || 0;
                    document.getElementById('avg-score').textContent = (data.avg_score || 0).toFixed(1);
                    document.getElementById('total-tests').textContent = data.total_tests_taken || 0;
                    
                    document.getElementById('stats-loading').classList.add('hidden');
                    document.getElementById('stats-content').classList.remove('hidden');
                } else {
                    throw new Error('Failed to load stats');
                }
            } catch (e) {
                document.getElementById('stats-loading').classList.add('hidden');
                document.getElementById('stats-error').classList.remove('hidden');
            }
        }
        
        document.getElementById('refresh-btn')?.addEventListener('click', async () => {
            try {
                await fetch(`/api/v1/stats/${studentId}/refresh`, { method: 'POST' });
                loadStats();
            } catch (e) {
                console.error('Refresh failed', e);
            }
        });
        
        loadStats();
    </script>
</body>
</html>
