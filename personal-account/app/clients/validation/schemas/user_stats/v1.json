{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserStats",
  "type": "object",
  "required": ["user_id", "attempts_total"],
  "properties": {
    "user_id": { "type": "string", "format": "uuid" },
    "attempts_total": { "type": "integer", "minimum": 0 },
    "attempts_passed": { "type": "integer", "minimum": 0 },
    "best_score": { "type": ["integer", "null"], "minimum": 0 },
    "last_attempt_at": { "type": ["string","null"], "format": "date-time" },
    "per_test": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["test_id","test_title","attempts"],
        "properties": {
          "test_id": { "type": "string", "format": "uuid" },
          "test_title": { "type": "string" },
          "attempts": { "type": "integer", "minimum": 0 },
          "best_score": { "type": ["integer","null"], "minimum": 0 },
          "passed_count": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}