{
  "realm": "student",
  "enabled": true,
  "displayName": "Student Portal",
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "roles": {
    "realm": [
      {
        "name": "student",
        "description": "Student role with access to personal account",
        "composite": false
      },
      {
        "name": "teacher",
        "description": "Teacher role with full access",
        "composite": false
      }
    ]
  },
  "defaultRoles": ["student"],
  "clients": [
    {
      "clientId": "personal-account-client",
      "name": "Personal Account Client",
      "description": "Client for Personal Account API",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "personal-account-secret",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "redirectUris": [
        "http://localhost/account/callback",
        "http://localhost:8000/account/callback",
        "http://localhost/account/*",
        "http://localhost:8000/account/*"
      ],
      "webOrigins": [
        "http://localhost",
        "http://localhost:8000",
        "*"
      ],
      "protocol": "openid-connect",
      "attributes": {
        "oauth2.device.authorization.grant.enabled": "false",
        "oidc.ciba.grant.enabled": "false"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "admin-panel-client",
      "name": "Admin Panel Client",
      "description": "Client for Admin Panel",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "admin-panel-secret",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://localhost/admin/*",
        "http://localhost:4000/*"
      ],
      "webOrigins": [
        "http://localhost",
        "http://localhost:4000",
        "*"
      ],
      "protocol": "openid-connect"
    }
  ],
  "users": [
    {
      "username": "student1",
      "email": "student1@example.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "Student",
      "credentials": [
        {
          "type": "password",
          "value": "student123",
          "temporary": false
        }
      ],
      "realmRoles": ["student"]
    },
    {
      "username": "teacher1",
      "email": "teacher1@example.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "Teacher",
      "credentials": [
        {
          "type": "password",
          "value": "teacher123",
          "temporary": false
        }
      ],
      "realmRoles": ["teacher", "student"]
    }
  ]
}
