<div class="question-card" data-question-index="{{questionIndex}}">
    <div class="form-group">
        <h3>Вопрос {{add questionIndex 1}}</h3>
        {{#if questionIndex}}
        <button type="button" class="remove-question-btn" onclick="removeQuestion({{questionIndex}})">× Удалить вопрос</button>
        {{/if}}
        <textarea name="question[{{questionIndex}}][text]" placeholder="Введите текст вопроса" required>
            {{#if question}}{{question.question.text}}{{/if}}
        </textarea>
    </div>
    
    <div class="answers-container" id="answers-{{questionIndex}}">
        {{#if question}}
            {{#each question.answers}}
            {{> partials/test-builder-answer 
                questionIndex=@../questionIndex 
                answerIndex=@index 
                answer=this
            }}
            {{/each}}
        {{else}}
            {{> partials/test-builder-answer questionIndex=questionIndex answerIndex=0}}
            {{> partials/test-builder-answer questionIndex=questionIndex answerIndex=1}}
        {{/if}}
    </div>
    
    <button type="button" class="add-answer-btn" onclick="addAnswer({{questionIndex}})">+ Добавить ответ</button>
</div>