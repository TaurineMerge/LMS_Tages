        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "204": {
            "description": "Попытка удалена"
          },
          "401": {
            "description": "Не авторизован"
          }
        }
      }
    },
    "/answers": {
      "post": {
        "tags": ["Answers"],
        "summary": "Создать ответ",
        "security": [
          {
            "keycloak": ["openid"]
          }
