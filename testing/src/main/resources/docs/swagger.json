        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Попытка найдена",
            "schema": {
              "$ref": "#/definitions/TestAttempt"
