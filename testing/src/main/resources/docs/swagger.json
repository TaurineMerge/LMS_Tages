          {
            "name": "testId",
            "in": "query",
            "type": "string"
          },
          {
            "name": "status",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Список попыток",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/TestAttempt"
              }
            }
          },
          "401": {
            "description": "Не авторизован"
          }
        }
