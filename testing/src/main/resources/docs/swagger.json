{
  "swagger": "2.0",
  "info": {
    "title": "Testing Service API",
    "description": "API для управления тестами, попытками прохождения тестов и ответами",
    "version": "1.0.0"
  },
  "host": "localhost",
  "basePath": "/testing",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "securityDefinitions": {
    "keycloak": {
      "type": "oauth2",
      "authorizationUrl": "http://localhost/realms/teacher/protocol/openid-connect/auth",
      "tokenUrl": "http://localhost/realms/teacher/protocol/openid-connect/token",
      "flow": "accessCode",
      "scopes": {
        "openid": "OpenID Connect authentication",
        "profile": "User profile information",
        "email": "User email address"
      }
    }
  },
  "security": [
    {
      "keycloak": ["openid", "profile", "email"]
    }
  ],
  "paths": {
    "/tests": {
      "get": {
        "tags": ["Tests"],
        "summary": "Получить список тестов",
        "description": "Возвращает HTML-страницу со списком тестов (для преподавателей)",
        "security": [
          {
            "keycloak": ["openid"]
          }
        ],
        "responses": {
          "200": {
            "description": "HTML-страница",
            "schema": {
              "type": "string"
            }
          },
          "401": {
            "description": "Не авторизован"
          }
        }
      },
      "post": {
        "tags": ["Tests"],
        "summary": "Создать тест",
        "security": [
          {
            "keycloak": ["openid"]
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Test"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Тест создан",
            "schema": {
              "$ref": "#/definitions/Test"
            }
          },
          "401": {
            "description": "Не авторизован"
          }
        }
      }
    },
    "/tests/{id}": {
      "get": {
        "tags": ["Tests"],
        "summary": "Получить тест по ID",
        "security": [
          {
            "keycloak": ["openid"]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Тест найден",
            "schema": {
              "$ref": "#/definitions/Test"
            }
          },
          "401": {
            "description": "Не авторизован"
          },
          "404": {
            "description": "Тест не найден"
          }
        }
      },
      "put": {
        "tags": ["Tests"],
        "summary": "Обновить тест",
        "security": [
          {
            "keycloak": ["openid"]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Test"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Тест обновлен",
            "schema": {
              "$ref": "#/definitions/Test"
            }
          },
          "401": {
            "description": "Не авторизован"
          }
        }
      },
      "delete": {
        "tags": ["Tests"],
        "summary": "Удалить тест",
        "security": [
          {
            "keycloak": ["openid"]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Тест удален"
          },
          "401": {
            "description": "Не авторизован"
          }
        }
      }
    },
    "/test-attempts": {
      "get": {
        "tags": ["TestAttempts"],
        "summary": "Получить список попыток",
