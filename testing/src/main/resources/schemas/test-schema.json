{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "course_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID курса, к которому привязан тест"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Название теста"
    },
    "min_point": {
      "type": "integer",
      "minimum": 0,
      "description": "Минимальный порог баллов"
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "description": "Описание теста"
    }
  },
  "required": ["course_id", "title", "min_point"],
  "additionalProperties": false
}