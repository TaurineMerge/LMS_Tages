{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "student_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID студента"
    },
    "test_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID теста"
    },
    "date_of_attempt": {
      "type": "string",
      "format": "date",
      "description": "Дата попытки (YYYY-MM-DD)"
    },
    "point": {
      "type": "integer",
      "minimum": 0,
      "description": "Набранные баллы"
    },
    "certificate_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID сертификата (если выдан)"
    },
    "attempt_version": {
      "type": "object",
      "description": "Снимок/версия попытки (JSON)"
    }
  },
  "required": ["student_id", "test_id", "date_of_attempt", "point"],
  "additionalProperties": false
}