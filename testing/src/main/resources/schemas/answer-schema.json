{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Текст ответа"
    },
    "question_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID вопроса"
    },
    "order": {
      "type": "integer",
      "minimum": 0,
      "description": "Порядок отображения"
    },
    "score": {
      "type": "integer",
      "minimum": 0,
      "description": "Баллы за ответ"
    }
  },
  "required": ["text", "order", "question_id", "score"],
  "additionalProperties": false
}