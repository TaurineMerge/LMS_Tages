{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "text_of_question": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000,
      "description": "Текст вопроса"
    },
    "test_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID теста"
    },
    "order": {
      "type": "integer",
      "minimum": 0,
      "description": "Порядок отображения вопроса в тесте"
    }
  },
  "required": ["text_of_question", "test_id", "order"],
  "additionalProperties": false
}
